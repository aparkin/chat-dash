# ChatDash Environment Configuration
# Copy this file to .env and fill in your values

#######################
# OpenAI Configuration
#######################
# Production OpenAI settings
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Development/Custom OpenAI settings (if using custom endpoints)
CBORG_API_KEY=your_custom_api_key_here
CBORG_BASE_URL=https://api.cborg.lbl.gov

#######################
# Weaviate Configuration
#######################
WEAVIATE_HOST=weaviate.kbase.us
WEAVIATE_HTTP_PORT=443
WEAVIATE_GRPC_HOST=weaviate-grpc.kbase.us
WEAVIATE_GRPC_PORT=443
WEAVIATE_SECURE=true

#######################
# Database Configuration
#######################
# Default directory for SQLite databases
DATA_DIR=data

# Analysis Configuration
CODE_GENERATION_MODEL=anthropic/claude-sonnet

#######################
# Application Settings
#######################
# Debug mode (set to false in production)
DEBUG=false

# Server configuration
HOST=0.0.0.0
PORT=8051

# Memory management
MAX_UPLOAD_SIZE=100MB  # Maximum file upload size
TOKEN_SAFETY_MARGIN=0.95  # Buffer for token limits 